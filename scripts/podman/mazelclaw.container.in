# MazelClaw gateway â€” Podman Quadlet (rootless)
# Installed by setup-podman.sh into mazelclaw's ~/.config/containers/systemd/
# {{MAZELCLAW_HOME}} is replaced at install time.

[Unit]
Description=MazelClaw gateway (rootless Podman)

[Container]
Image=mazelclaw:local
ContainerName=mazelclaw
UserNS=keep-id
Volume={{MAZELCLAW_HOME}}/.mazelclaw:/home/node/.mazelclaw
EnvironmentFile={{MAZELCLAW_HOME}}/.mazelclaw/.env
Environment=HOME=/home/node
Environment=TERM=xterm-256color
PublishPort=18789:18789
PublishPort=18790:18790
Pull=never
Exec=node dist/index.js gateway --bind lan --port 18789

[Service]
TimeoutStartSec=300
Restart=on-failure

[Install]
WantedBy=default.target
